<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/preparationTitle"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Preparation for Interviews"
        android:textColor="#E0AC00"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homePage"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F4D81F"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F4D81F"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_back"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="16dp"
        android:background="#BF3030"
        android:gravity="center"
        android:text="Give a little bit of background information, elucidate your strengths, and accentuate why you are a good fit for this position."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_front"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="16dp"
        android:background="#326314"
        android:gravity="center"
        android:text="Tell me about yourself."
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flip_btn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Show Answer"
        android:layout_marginTop="313dp"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="559dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/prep2Answer"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="215dp"
        android:background="#BF3030"
        android:gravity="center"
        android:text="Give a little bit of background information, elucidate your strengths, and accentuate why you are a good fit for this position."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prep2Question"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="215dp"
        android:background="#326314"
        android:gravity="center"
        android:text="Tell me about yourself."
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prep2Btn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Show Answer"
        android:layout_marginTop="313dp"
        android:layout_marginLeft="215dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="559dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
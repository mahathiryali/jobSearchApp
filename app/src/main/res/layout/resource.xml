<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resourcebackground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/home"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F4D81F"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/resumes"
        android:clickable="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resourcestitle"
        app:srcCompat="@drawable/foldericon" />

    <ImageView
        android:id="@+id/preparation"
        app:srcCompat="@drawable/foldericon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="176dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resourcestitle"/>

    <ImageView
        android:id="@+id/faq"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="154.5dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="382dp"
        app:srcCompat="@drawable/foldericon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resourcestitle"/>

    <TextView
        android:id="@+id/resourcestitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Resources"
        android:textColor="#E0AC00"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/resumestext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:background="#CC9C00"
        android:gravity="center"
        android:text="Resumes"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preparationtext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="249dp"
        android:layout_marginTop="280dp"
        android:background="#CC9C00"
        android:gravity="center"
        android:text="Preparation"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/faqtext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="154.5dp"
        android:layout_marginTop="455dp"
        android:background="#CC9C00"
        android:gravity="center"
        android:text="FAQ"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>